@page "/shop"
@model ShopModel
@{
    ViewData["Title"] = "Shop Page";
}

<!-- Page Sidebar Ends-->
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Shops
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                @* <svg class="stroke-icon">
                                    <use href="https://admin.pixelstrap.com/cuba/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg> *@
                            </a>
                        </li>
                        <li class="breadcrumb-item">Shops</li>
                        <li class="breadcrumb-item active">Shop List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0 card-no-border">
                        <h4>Shop Management</h4><span>Add , view , edit and delete your shops</span>
                    </div>
                    <div class="card-body">
                        <div class="list-product-header">
                            <div>
                                <div class="light-box"><a data-bs-toggle="collapse" href="#collapseProduct" role="button" aria-expanded="false" aria-controls="collapseProduct"><i class="filter-icon show" data-feather="filter"></i><i class="icon-close filter-close hide"></i></a></div><a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addshop"><i class="fa fa-plus"></i>Add Shop</a>
                            </div>
                            <div class="collapse" id="collapseProduct">
                                <div class="card card-body list-product-body">
                                    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-3">
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose Shop ID</option>
                                                <option value="1">NASSER GAS/ORYXSD/MNYR,10</option>
                                                <option value="2">NASSER GAS/ORYXSD/MNYR,9</option>
                                                <option value="3">NASSER GAS/ORYXSD/MNYR,8</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose Shop Name</option>
                                                <option value="1">Abuu Shop</option>
                                                <option value="2">Rajabu Shop</option>
                                                <option value="3">Kijanga Shop</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose Region</option>
                                                <option value="1">Manyara</option>
                                                <option value="2">Arusha</option>

                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose District</option>
                                                <option value="1">Babati </option>
                                                <option value="2">Majengo</option>
                                                <option value="3">Monduli</option>

                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Price</option>
                                                <option value="1">56000.00</option>
                                                <option value="2">19000.00</option>
                                                <option value="3">10000.00</option>
                                                <option value="3">15000.00</option>
                                                <option value="3">99000.00</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="">
                            <div class="table-responsive">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>Shop ID</th>
                                            <th>Shop Name</th>
                                            <th>Region</th>
                                            <th>District</th>
                                            <th>Ward</th>
                                            <th>Street</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>NASSER GAS/ORYXSD/MNYR,10</td>
                                            <td>Abuu Shop</td>
                                            <td>Manyara</td>
                                            <td>Babati</td>
                                            <td>Katesh</td>
                                            <td>Mkuu</td>
                                            <td>
                                                <ul class="action">
                                                    <li class="edit"> <a href="#"><i class="icon-pencil-alt"></i></a></li>
                                                    <li class="delete"><a href="#"><i class="icon-trash"></i></a></li>
                                                </ul>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>NASSER GAS/ORYXSD/MNYR,9</td>
                                            <td>Mama Udaa Shop</td>

                                            <td>Manyara</td>
                                            <td>Babati</td>
                                            <td>Katesh</td>
                                            <td>Mkuu</td>
                                            <td>
                                                <ul class="action">
                                                    <li class="edit"> <a href="#"><i class="icon-pencil-alt"></i></a></li>
                                                    <li class="delete"><a href="#"><i class="icon-trash"></i></a></li>
                                                </ul>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Add shop Modal Ends-->
    <div class="modal fade " id="addshop" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Shop</h4>
                    <button class="btn-close py-0" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body dark-modal">
                    <div class="form theme-form">
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label>Shop Name</label>
                                    <input class="form-control" type="text" placeholder="Shop name *">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4">
                                <div class="mb-3">
                                    <label>Region</label>
                                    <select class="form-select">
                                        <option>Manyara</option>
                                        <option>Arusha</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="mb-3">
                                    <label>District</label>
                                    <select class="form-select">
                                        <option>Babati</option>
                                        <option>Katesh</option>
                                        <option>Mbulu</option>
                                        <option>Monduli</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="mb-3">
                                    <label>Ward</label>
                                    <select class="form-select">
                                        <option>Katesh</option>

                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="text-end"><a class="btn btn-success me-3" href="#">Add</a><a class="btn btn-danger" href="#">Cancel</a></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Add Shop Modal Ends-->
